[Unit]
Description=arklone - boot sync service
Requires=network-online.target
Before=emulationstation.service
After=network-online.target

[Service]
Type=oneshot
User=ark
Group=ark
StandardInput=tty
StandardOutput=tty
StandardError=tty
TTYPath=/dev/tty1
ExecStart=/bin/bash -c '/opt/joy2key/listen.sh "/opt/arklone/dialogs/boot-sync.sh"'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
